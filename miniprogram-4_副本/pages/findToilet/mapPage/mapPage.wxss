/* mapPage.wxss */
page {
  height: 100%;
  width: 100%;
}

/* 适应不同的设备 */
.map-container {
  width: 100%;
  height: 100%;
  position: relative; /* 如果需要在地图上放置其他元素，可以设置为 relative */
}

/* 其他样式 */
/* 在地图上方摆放按钮 */
.position-button {
  position: absolute;
  bottom: 20px; /* 距离底部的距离 */
  right: 20px; /* 距离右侧的距离 */
  z-index: 999; /* 确保按钮在地图之上 */
}
